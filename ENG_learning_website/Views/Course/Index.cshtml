@model IEnumerable<Course>
@{
    ViewData["Title"] = "Course";
}

<div class="kursy-container">

                @if(!(ViewBag.Clients==null))    @* to jest if do pokazywania czy ktos ma suba *@
           {
                <span class="create-button">
            <a   asp-controller="Course" asp-action="Create">+</a>
            </span>
            }
            else
            {
              
            }
    <table class="tabela-kursy">
        <thead>
            
            <tr>
              
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                  <th>@Html.DisplayNameFor(model => model.Difficulty)</th>
                  
                    <th> EXERCISE</th>
                   
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td >
                   @item.Name

                </td>
               <td >
                   @item.Difficulty

                </td>
                <td>
                    <a   asp-action="Details" asp-route-id="@item.Id" > &nbsp;&nbsp; &#9655; &nbsp;&nbsp; </a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <span class="create-button-fiszki">
            <a   asp-controller="Dictionaries" asp-action="Index">FISZKI</a>
            </span>
    
</div>